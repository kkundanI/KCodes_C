//Fibonacci using pointer and recursion

#include <stdio.h>
#include <conio.h>
int fb(int *a ,int *b, int n);
int main()
{
	int x=0, y=1, n;
	printf("Enter range : ");
	scanf("%d", &n); 
	printf("0\n");
			if (n>=2)
			{
					printf("1\n");
		}
		
	for(int i = 2; i<n; i++)
	{
		if(n>=3)
		{
			fb(&x, &y,n-2);
			printf("%d\n", y);
		}
	}
	return 0;
}


int fb(int *a,int *b,int n)
{
	int k;
	if(n==0)
	return 0;
	k=*a+*b;
	printf("%d\n",k);
	*a=*b;
	*b=k;
	fb(*a,*b,n-1);
	return 0;
}

                                                       															
																										                                        				